	<!-- Prominent CTAs -->
	<div class="flex flex-wrap gap-4 mb-8 reveal stagger-5">
		<!-- Primary CTA -->
		<a
			href="#proyectos"
			class="group relative inline-flex items-center gap-2 px-6 py-3 text-white font-bold rounded-lg overflow-hidden transition-all hover:scale-105 hover:shadow-xl active:scale-95"
